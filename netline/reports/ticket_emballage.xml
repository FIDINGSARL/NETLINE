<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <report id="emballage_report_id"
                model="cps.colis.emballage"
                string="Tickets d'emballage"
                report_type="qweb-pdf"
                name="cps_colis_emballage_v13.emballage_report_template"
                paperformat="paperformat_zebra"
        />
    </data>

    <template id="emballage_report_template">
        <t t-call="web.html_container">

            <t t-foreach="docs" t-as="d">
                <t t-call="web.external_layout">

                               <t t-foreach="d.colis_details" t-as="l">
                                   <div class="page" >
                                   <table width="100%" height="100%">
                                        <tr>
                                            <td><span style="font-size:15px;font-weight:bold;font-family:Calibri;padding-right:20px">Ecolo Rentel</span><span style="font-size:12px;font-family:Calibri;" t-esc="context_timestamp(datetime.datetime.now()).strftime('%d/%m/%Y')"/> <span style="font-size:13px;font-family:Calibri;" t-esc="context_timestamp(datetime.datetime.now()).strftime('%H:%M:%S')"/></td>
                                        </tr>
                                       <tr>
                                           <td style="text-align:center; font-size:15px;font-weight:bold;font-family:Calibri;" ><span t-field="d.product_production_id.product_tmpl_id.client_name"/> / <span t-field="d.product_production_id.atelier_id.name"/></td>
                                        </tr>
                                       <tr>
                                        <td style="text-align:center; font-size:15px;font-weight:bold;font-family:Calibri;"> <span t-field="d.product_production_id.product_tmpl_id.code_article"/></td>
                                        </tr>
                                        <tr>
                                            <td style="text-align:center;font-size:15px;font-family:Calibri;"><span t-field="d.product_production_id.name"/></td>
                                        </tr>
                                       <tr>
                                            <td style="text-align:center;font-family:Calibri;font-size:15px;font-weight:bold;color:white; background-color:black;"><span t-field="l.qte_emballer" /><br/><span style="font-size:15px;">Normal</span></td>
                                        </tr>
                                   </table>
                                    </div>
                               </t>

                </t>
            </t>
        </t>
    </template>


</odoo>
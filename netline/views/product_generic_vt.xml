<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <record id="vtproduct_form_view" model="ir.ui.view">
        <field name="name">netline.genericproduct_vt.form</field>
        <field name="model">netline.genericproduct_vt</field>
        <field name="arch" type="xml">
            <form string="Product">
                <sheet>
                    <field name="id" invisible="True"/>
                    <div class="oe_title">
                        <label class="oe_edit_only" for="product_name" string="Product Name"/>
                        <h1><field name="product_name" placeholder="Product Name"/></h1>
                        <group name="group_standard_price">
                            <field name="product_categ" string="Famille de l'article"/>
                        </group>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="netline_vtproduct_trees_view">
        <field name="name">netline.genericproduct_vt.tree</field>
        <field name="model">netline.genericproduct_vt</field>
        <field name="arch" type="xml">
            <tree name="Produits" default_order='product_categ, product_name'>
                <field name="product_name"/>
                <field name="product_categ" string="Famille"/>
            </tree>
        </field>
    </record>

    </data>
</odoo>
